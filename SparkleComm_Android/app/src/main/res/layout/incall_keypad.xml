<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dtmf"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:singleLine="true"
        android:ellipsize="start"
        android:layout_marginTop="0dp"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:gravity="center"
        android:text="" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="8" />

            <TextView
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/star"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="*" />

            <TextView
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/pound"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:gravity="center"
                android:text="#" />
        </TableRow>

    </TableLayout>

</LinearLayout>
